.product-add { padding: 0; line-height: 38px; min-height: 38px; }

.perquantity, .quantity {
  font-weight: bold;
  text-align: center;
  margin: 0 5px! important;
  width: 70px! important;
  display: inline-block! important;
  padding: 0! important;
  text-indent: 0! important;
  display: inline-block! important;
  float: left;
}

.up {
  border: 1px solid #f0f0f0;
  outline: 0;
  padding: 0 8px;
  line-height: 38px;
  min-height: 38px;
  display: inline-block;
  /*color: {{ settings.text_color }};*/
  float: left;
}
.qtybtn.up {
  width: 30px;
  outline: 0;
  color: #fff;
  background: black;
  margin-bottom: 0px;
}
.downer {
  border: 1px solid #f0f0f0;
  padding: 0 8px;
  outline: 0;
  line-height: 38px;
  min-height: 38px;
  display: inline-block;
  /*color: {{ settings.text_color }};*/
  float: left;
  clear: left;
}
.qtybtn.downer {
  width: 30px;
  outline: 0;
  color: #fff;
  background: black;
  margin-bottom: 0px;
}
.up:hover, .downer:hover { cursor: pointer; }
button.add.clearfix {
    width: 100% !important;
    display: inline-block;
    margin-bottom: 5px;
}
span#totalqty {
    display: inline-block;
    width: 100%;
    margin-bottom: 5px;
    font-weight: 700;
    color: #000;
}
.product-index {
    border: 1px solid #ddd;
}
.add { margin-top: 20px; clear: left; float: left; width: 40%! important;}
@media (max-width: 768px){
  #wc_review_section .wc_overall_review{position: relative;}
  #collection-sidebar {
    clear: left;
    position: fixed;
    bottom: 0;
    z-index: 9999;
    width: 94%;
    padding: 5px 15px;
    background: #ececec;
}
}
.product-loop .product-add {
    display: inline-block;
    margin-top: 15px;
}

.the-sox-drawer .fancybox-wrap form, .the-sox-drawer .fancybox-wrap #product-price {
    display: none;
}
